datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Father {
  id          String    @id @default(uuid())
  email       String    @unique
  firstname   String
  lastname    String
  password    String
  phonenumber String
  sons        Son[] // Corrected field name from "son" to "sons"
  callouts    Callout[] // Corrected field name from "Callout" to "callouts"
  role        Role
}

model Son {
  id          String    @id @default(uuid())
  firstname   String
  lastname    String
  yearofbirth Int // Assuming birth year is numeric
  father_id   String
  class_id    String?
  class_name  String?
  
  father      Father    @relation(fields: [father_id], references: [id])
  class       Class?    @relation(fields: [class_id], references: [id])
  callouts    Callout[] // Corrected field name from "callout" to "callouts"
  role        Role

  @@index([father_id])
  @@index([class_id])
}

model Teacher {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String
  firstname   String
  lastname    String
  class_id    String?
  phonenumber String
  class       Class?     @relation(fields: [class_id], references: [id])
  callouts    Callout[] // Corrected field name from "callout" to "callouts"
  role        Role

  @@index([class_id])
}

model Class {
  id       String    @id @default(uuid())
  name     String    @unique
  students Son[]
  teachers Teacher[] // Corrected field name from "teacher" to "teachers"
  callouts Callout[]
}

enum Status {
  Waiting
  SendOut
}

model Callout {
  id         String  @id @default(uuid())
  father_id  String
  teacher_id String
  class_id   String
  son_id     String
  status     Status
  father     Father  @relation(fields: [father_id], references: [id])
  teacher    Teacher @relation(fields: [teacher_id], references: [id])
  son        Son     @relation(fields: [son_id], references: [id])
  class      Class   @relation(fields: [class_id], references: [id])

  // Assuming a son can have only one active callout at a time
  @@index([father_id])
  @@index([son_id])
  @@index([teacher_id])
  @@index([class_id])
}

model Admin {
  id        String @id @default(uuid())
  email     String @unique
  password  String
  firstname String
  lastname  String
  role      Role
}

enum Role {
  FATHER
  SON
  TEACHER
  ADMIN
}
